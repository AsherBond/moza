= bootstrap_page_header "Edit Video", "#{@video.name}" 
.row
	.span8.offset4
		.well
			= render 'form'
	.span4
		= link_to "Delete Video", video_path(@video), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-large btn-danger'
