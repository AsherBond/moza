-if current_user
	= simple_form_for [@commentable, @comment] do |f|
		= f.error_notification
		= f.input :content, :label => false, :as => :text, :input_html => {:class => "input-block-level", :rows => 4}
		= f.submit "Submit Comment", :class => "btn btn-primary"
-else
	%p Sorry! You must signin to write a comment.