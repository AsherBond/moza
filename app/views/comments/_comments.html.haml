- @comments.each do |comment|
  %blockquote
    %p= comment.content
    %small
      = icon_link :user, comment.user.username, comment.user
      ( #{time_ago_in_words(comment.created_at)} ago... )
      \#{icon_link "retweet", "Reply", nil, "btn btn-mini"}
      \#{icon_link "flag", "", nil, "btn btn-mini"}
