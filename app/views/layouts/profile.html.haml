!!! 5
%html(lang="en")
  %head
    = render 'layouts/meta'
    %title= content_for?(:title) ? yield(:title) : "Moza"
    = render 'layouts/shim'
    = render 'layouts/stylesheets'
    = render 'layouts/favicons'
    = render 'layouts/artist_css' if @user.is_active?
  %body
    = render 'layouts/navbar'
    .container
      = bootstrap_flash
      .content
        = yield
      / /content
      = render 'layouts/footer'
    = render 'layouts/javascripts'