= simple_form_for @article, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :content
  = f.input :user_id
  = f.input :photo_file_name
  = f.input :photo_content_type
  = f.input :photo_file_size
  = f.input :photo_updated_at
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), articles_path, :class => 'btn'
