- model_class = Event
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:start_date)
      %th= model_class.human_attribute_name(:start_time)
      %th= model_class.human_attribute_name(:end_date)
      %th= model_class.human_attribute_name(:end_time)
      %th= model_class.human_attribute_name(:details)
      %th= model_class.human_attribute_name(:ticket_link)
      %th= model_class.human_attribute_name(:ticket_info)
      %th= model_class.human_attribute_name(:active)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @events.each do |event|
      %tr
        %td= link_to event.id, event_path(event)
        %td= event.name
        %td= event.start_date
        %td= event.start_time
        %td= event.end_date
        %td= event.end_time
        %td= event.details
        %td= event.ticket_link
        %td= event.ticket_info
        %td= event.active
        %td= event.user_id
        %td=l event.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_event_path(event), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), event_path(event), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_event_path, :class => 'btn btn-primary'
