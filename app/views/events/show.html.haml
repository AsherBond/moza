- model_class = Event
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @event.name
%p
  %strong= model_class.human_attribute_name(:start_date) + ':'
  %br
  = @event.start_date
%p
  %strong= model_class.human_attribute_name(:start_time) + ':'
  %br
  = @event.start_time
%p
  %strong= model_class.human_attribute_name(:end_date) + ':'
  %br
  = @event.end_date
%p
  %strong= model_class.human_attribute_name(:end_time) + ':'
  %br
  = @event.end_time
%p
  %strong= model_class.human_attribute_name(:details) + ':'
  %br
  = @event.details
%p
  %strong= model_class.human_attribute_name(:ticket_link) + ':'
  %br
  = @event.ticket_link
%p
  %strong= model_class.human_attribute_name(:ticket_info) + ':'
  %br
  = @event.ticket_info
%p
  %strong= model_class.human_attribute_name(:active) + ':'
  %br
  = @event.active
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @event.user_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), events_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_event_path(@event), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), event_path(@event), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
