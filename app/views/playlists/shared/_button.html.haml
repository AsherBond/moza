- if current_user
	.btn-group
		%a.btn.btn-mini.btn-inverse.dropdown-toggle{"data-toggle"=>"dropdown"}
			%i.icon-plus
			%i.icon-reorder
			Playlists
			%span.caret
		%ul.dropdown-menu
			- if current_user.playlists.each do |playlist|
				%li= link_to "<span class='add_song_to_playlist_#{song.id}'>#{playlist.name}</span>".html_safe, add_song_to_playlist_path(song_id: song.id, playlist_id: playlist.id), remote: :true, action: :add_song_to
			- end.empty?
				%li= icon_link "remove", "You have no playlists", new_playlist_path
			%li.divider
			%li= icon_link "plus", "New Playlist", new_playlist_path

