.btn-group{"data-toggle"=>"buttons-radio"}
  -if current_user.content_background_color_active?
    %label.btn.btn-primary.active{:for=>"content_background_color_active"} 
      Active
  -else
    %label.btn.btn-primary{:for=>"content_background_color_active"} 
      Active

  -if !current_user.content_background_color_active?
    %label.btn.btn-primary.active{:for=>"content_background_color_unactive"} 
      Hidden
  -else
    %label.btn.btn-primary{:for=>"content_background_color_unactive"} 
      Hidden

%input{:type=>"checkbox", :id=>"content_background_color_active", :name=>"user[content_background_color_active]", :value=>"1", :style=>"display:none"}
%input{:type=>"checkbox", :id=>"content_background_color_unactive", :name=>"user[content_background_color_active]", :value=>"0", :style=>"display:none"}